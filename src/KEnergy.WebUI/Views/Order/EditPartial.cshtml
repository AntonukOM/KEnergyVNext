@model Order
@{
    Order order = Model;
    IEnumerable<SelectListItem> items = ViewBag.ManagerList;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="/Order/SaveModal" method="post" id="orderForm">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger" id="validationSummary">
                        <ul></ul>
                    </div>
                    <input type="hidden" asp-for="OrderId" value="@order.OrderId" id="orderId"/>
                    <div class="form-group">
                        <label asp-for="Number" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Number" class="form-control" value="@order.Number" id="number"/>
                            <span asp-validation-for="Number" class="text-danger" id="numberValidation" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShipmentDate" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="ShipmentDate" class="form-control" value="@order.ShipmentDate" id="shipment"/>
                            <span asp-validation-for="ShipmentDate" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManagerId" class="col-md-2 control-label"></label>
                        <div class="col-sm-10">
                            <select class="form-control" asp-for="ManagerId" asp-items="items" id="managerId">items</select>
                            <span asp-validation-for="ManagerId" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Note" class="form-control" value="@order.Note" id="note"/>
                            <span asp-validation-for="Note" class="text-danger" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Save" class="btn btn-default"/>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/modal.js"></script>
}